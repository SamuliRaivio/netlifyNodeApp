doctype html 
html 
  head 
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    title Add customer
  body 
    div 
      div(style={"display": "flex", "align-items": "center"}) 
        div
          h1 Add new customer
        div(style={"margin-left": "auto"})
          a(href="/").btn.btn-outline-dark Customer list
      form(action="/addcustomer", method="POST" style={"margin": "10px"})
        div.form-outline.w-25
          label(for="firstname").form-label First name 
          input(id="firstname" type="text" name="firstname").form-control
        div.form-outline.w-25
          label(for="lastname").form-label Last name
          input(id="lastname" type="text" name="lastname").form-control
        div.form-outline.w-25
          label(for="email").form-label Email address
          input(id="email" type="text" name="email").form-control
        div.form-outline.w-25
          label(for="phone").form-label Phone number
          input(id="phone" type="number" name="phone").form-control
        div.mt-3
          input(type="submit", value="Add").btn.btn-outline-dark
      
    